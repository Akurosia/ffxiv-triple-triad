<table class="table table-striped table-sm shadow p-3 mt-4 mb-5">
  <thead>
    <tr>
      <th scope="col"><%= sort_link(@q, :name) %></th>
      <th scope="col"><%= sort_link(@q, :location) %></th>
      <th scope="col">Rules</th>
      <th scope="col">Quest</th>
      <th scope="col">Rewards</th>
    </tr>
  </thead>
  <tbody>
    <% @npcs.each do |npc| %>
      <tr>
        <td><%= link_to(npc.name, npc_path(npc)) %></td>
        <td><%= location(npc) %></td>
        <td><%= npc.rules %></td>
        <td><%= quest(npc) %></td>
        <td>
          <div class="d-flex card-list">
            <% npc.rewards.each do |card| %>
              <%= small_image(card) %>
            <% end %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
