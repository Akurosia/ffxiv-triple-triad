<div class="row">
  <% @packs.each do |pack| %>
    <div class="col-xs-12 col-lg-6">
      <div class="card shadow mb-4" id="<%= pack.id %>">
        <h5 class="card-header">
          <%= pack.name %>
          (<%= pack_cost(pack) %>)
        </h5>
        <div class="card-body card-table">
          <table class="table table-striped table-sm">
            <% pack.cards.each do |card| %>
              <tr>
                <td><%= small_image(card) %></td>
                <td><%= card.name %></td>
                <td><%= type_image(card) %></td>
                <td><%= stars(card) %></td>
                <td><%= render 'cards/stats', card: card %></td>
              </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  <% end %>
</div>
