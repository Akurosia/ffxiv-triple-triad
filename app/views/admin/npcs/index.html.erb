<div class="card">
  <div class="card-header">
    <div class="d-flex flex-wrap">
      <%= link_to :admin_npcs, class: 'unstyled mr-auto pt-1' do %>
        <h5 class="mb-2 mb-md-0">Manage NPCs</h5>
      <% end %>
      <%= search_form_for(@q, url: admin_npcs_path, class: 'form form-inline') do |f| %>
        <%= f.search_field "name_#{I18n.locale}_cont", placeholder: 'Name', size: 30,
          class: 'form-control form-control-sm mr-2' %>
        <%= f.submit 'Search', class: 'btn btn-secondary btn-sm mt-2 mt-md-0' %>
      <% end %>
    </div>
  </div>
  <div class="card-body card-table">
    <table class="table table-striped table-sm">
      <tr>
        <th>Name</th>
        <th>Location</th>
        <th>Rules</th>
        <th class="hide-xs">Quest</th>
        <th>Patch</th>
        <th></th> <!-- Actions -->
      </tr>
      <% @npcs.each do |npc| %>
        <tr>
          <td><%= npc.name %></td>
          <td><%= location(npc) %></td>
          <td><%= format_rules(npc) %></td>
          <td class="hide-xs"><%= quest(npc) %></td>
          <td><%= npc.patch %></td>
          <td class="text-center">
            <%= link_to fa_icon('pencil', class: 'btn btn-dark btn-sm'), edit_admin_npc_path(npc) %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
  <div class="card-footer d-flex justify-content-center mb-0">
    <%= will_paginate(@npcs) %>
  </div>
</div>
