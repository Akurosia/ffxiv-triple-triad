<div class="progress">
  <div class="progress-bar" role="progressbar" style="width: <%= (value / max.to_f) * 100 %>%;"
    aria-valuenow="<%= value %>" aria-valuemin="0" aria-valuemax="<%= max %>">
    <% if max > 0 %>
      <b class="px-2"><%= value %>/<%= max %> (<%= ((value / max.to_f) * 100).to_i %>%)</b>
    <% end %>
  </div>
</div>
