<%= search_form_for(@q, url: url, class: 'form-inline card-search') do |f| %>
  <%= f.search_field :name_cont, placeholder: 'Name', size: 30, class: 'form-control form-control-sm' %>
  <%= f.collection_select :card_type_id_eq, CardType.all, :id, :name, { include_blank: 'All Types' }, class: 'form-control form-control-sm' %>
  <%= f.select :stars_eq, rarity_options, { include_blank: 'All Rarities' }, class: 'form-control form-control-sm' %>
  <%= f.select :sources_origin_eq, Source.names, { include_blank: 'All Sources', selected: @type },
    class: 'form-control form-control-sm' %>
  <%= f.submit class: 'btn btn-secondary btn-sm' %>
<% end %>
