<div class="col-md-12">
  <h3>All Cards</h3>
  <table class="table table-striped table-sm shadow p-3 mt-4 mb-5">
    <thead>
      <tr>
        <th scope="col"></th> <!-- Image -->
        <th scope="col">Name</th>
        <th scope="col">Type</th>
        <th scope="col">Rarity</th>
        <th scope="col" class="text-center">Stats</th>
        <th scope="col">Source</th>
        <th scope="col">Patch</th>
      </tr>
    </thead>
    <tbody>
      <% @cards.each do |card| %>
        <tr>
          <td><%= small_image(card) %></td>
          <td><%= card.name %></td>
          <td><%= type_image(card) %></td>
          <td><%= stars(card) %></td>
          <td>
            <div class="d-flex flex-column stats">
              <div class="d-flex justify-content-center">
                <span><%= stat(card, :top) %></span>
              </div>
              <div class="d-flex justify-content-around">
                <span><%= stat(card, :left) %></span>
                <span><%= stat(card, :right) %></span>
              </div>
              <div class="d-flex justify-content-center">
                <span><%= stat(card, :bottom) %></span>
              </div>
            </div>
          </td>
          <td><%= source(card) %></td>
          <td><%= card.patch %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
